<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="clipboard.App"
             xmlns:local="using:clipboard"
             xmlns:converters="using:clipboard.Converters"
             RequestedThemeVariant="Dark">

    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme />
    </Application.Styles>

    <Application.Resources>
        <ResourceDictionary>
            <converters:OverlayStateToScaleConverter x:Key="OverlayStateToScaleConverter" />
            <converters:HoverToGridLengthConverter x:Key="HoverToGridLengthConverter" />
            <converters:IsPointerOverToVisibilityConverter x:Key="IsPointerOverToVisibilityConverter" />
            <converters:WindowActiveToBorderBrushConverter x:Key="WindowActiveToBorderBrushConverter" 
                                                           ActiveBrush="{DynamicResource SystemControlBackgroundAccentBrush}"
                                                           InactiveBrush="#444"/>

            <!-- подключение словаря -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="/Styles/BaseResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>